<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<VBox fx:id="securityContainer" xmlns:fx="http://javafx.com/fxml/1" spacing="15" alignment="TOP_LEFT" style="-fx-padding: 20;"
      fx:controller="com.example.innosynergy.controller.SecurityController">

    <!-- Security Settings Section -->
    <VBox spacing="10">
        <Label text="Security Settings" style="-fx-font-size: 14px; -fx-font-weight: bold;" />

        <!-- Password Change -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <ImageView fitWidth="20" fitHeight="20">
                <Image url="@/images/security.png"/>
            </ImageView>
            <Label text="Change Password" onMouseClicked="#handleChangePasswordClick"/>
        </HBox>

        <!-- Two-factor Authentication -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <ImageView fitWidth="20" fitHeight="20">
                <Image url="@/images/security.png"/>
            </ImageView>
            <Label text="Two-factor Authentication" onMouseClicked="#handleTwoFactorAuthClick"/>
        </HBox>

        <!-- Activity Log -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <ImageView fitWidth="20" fitHeight="20">
                <Image url="@/images/localisation.png"/>
            </ImageView>
            <Label text="View Activity Log" onMouseClicked="#handleActivityLogClick"/>
        </HBox>

        <!-- Security Alerts -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <ImageView fitWidth="20" fitHeight="20">
                <Image url="@/images/notification.png"/>
            </ImageView>
            <Label text="Security Alerts" onMouseClicked="#handleSecurityAlertClick"/>
        </HBox>
    </VBox>

    <!-- Additional Information Section -->
    <VBox spacing="10" style="-fx-padding: 10 0 0 0;">
        <Label text="Additional Information" style="-fx-font-size: 14px; -fx-font-weight: bold;" />

        <!-- Manage Devices -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <ImageView fitWidth="20" fitHeight="20">
                <Image url="@/images/user.png"/>
            </ImageView>
            <Label text="Manage Devices" onMouseClicked="#handleManageDevicesClick"/>
        </HBox>

        <!-- Privacy Settings -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <ImageView fitWidth="20" fitHeight="20">
                <Image url="@/images/security.png"/>
            </ImageView>
            <Label text="Privacy Settings" onMouseClicked="#handlePrivacySettingsClick"/>
        </HBox>
    </VBox>

</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fx:id="scrollPane" fitToWidth="true" style="-fx-background: #bdd4f3;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.innosynergy.controller.NotificationBarController">
    <VBox fx:id="notificationContainer" alignment="TOP_LEFT" prefHeight="400.0" prefWidth="300.0" spacing="15" style="-fx-padding: 20; -fx-background-color: #bdd4f3;">
        <!-- Title Section -->
        <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Notifications" />

        <!-- The notifications will be dynamically added here by the controller -->

        <!-- Placeholder for no notifications -->
        <VBox fx:id="noNotificationsPlaceholder" alignment="CENTER" spacing="10" visible="false">
            <Label text="Aucune notification disponible." style="-fx-font-size: 14px; -fx-text-fill: #6b7280;" />
        </VBox>

        <!-- Historical Notifications Link -->
        <VBox fx:id="historicalNotificationsLink" alignment="TOP_LEFT" spacing="0">
            <Label style="-fx-font-size: 14px; -fx-text-fill: #6b7280;" text="notifications manquantes?" />
        </VBox>
    </VBox>
</ScrollPane>